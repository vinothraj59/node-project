
<% include partials/header %>
<div class="container">
    <div class="row">
            <h1 style="text-align:center">Add Student Details</h1>
        <div style="width:30%; margin: 0 auto;">    
            <form action="/students" method="POST">
                <div class="form-group">
                        <input type="text" name="name" class="form-control" placeholder="Student name">
                </div>
                
                <div class="form-group">
                        <input type="text" name="age" class="form-control" placeholder="Age">
                </div>
                
                <div class="form-group">
                        <input type="text" name="geocode" class="form-control" placeholder="Geocode" >
                </div>
                
                <div class="form-group">
                        <input type="text" name="dept" class="form-control" placeholder="Department" >
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
                
            </form>
            <a href="/students">Go Back</a>
        </div>    
        <hr>
        <h2 style="text-align:center">Choose a CSV file</h2>

        <div style="width:30%; margin: 0 auto;">  
        <form action="/profile" method="post" enctype="multipart/form-data">

            <div class="form-group"> <input type="file" name="studentdata" /></div>

            <div class="form-group"><button class="btn btn-primary btn-lg btn-block">Submit</button></div>
        </form>
        <a href="/students">Go Back</a>
        </div>
    </div>
</div>
